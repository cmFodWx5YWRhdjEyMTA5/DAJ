<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_bg" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/sidebar_logo" />

        <EditText
            android:id="@+id/userName"
            style="@style/EditTextField"
            android:layout_below="@+id/logo"
            android:layout_marginTop="70dp"
            android:drawableStart="@drawable/user"
            android:elevation="5dp"
            android:drawableTint="@color/greenNavSelection"
            android:hint="@string/user_name" />


        <EditText
            android:id="@+id/password"
            style="@style/EditTextField"
            android:layout_below="@+id/userName"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/password"
            android:drawableTint="@color/greenNavSelection"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/password"
            android:layout_margin="20dp"
            android:text="@string/forgot_password"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotPassword"
            android:layout_margin="20dp"
            android:background="@drawable/curve_bg_green"
            android:text="@string/sign_in"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/followUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signIn"
            android:layout_centerHorizontal="true"
            android:text="@string/follow_us"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followUs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook"
                style="@style/socialMediaIcons"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitter"
                style="@style/socialMediaIcons"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/instagram"
                style="@style/socialMediaIcons"
                app:srcCompat="@drawable/instagram" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/english"
                style="@style/languageSelect"
                android:text="@string/english" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/arabic"
                style="@style/languageSelect"
                android:text="@string/arabic" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>