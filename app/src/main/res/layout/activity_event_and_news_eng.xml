<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green_grade">

    <ImageView
        android:id="@+id/logo_en"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitEnd"
        android:src="@drawable/logo_half_circle" />


    <ListView
        android:id="@+id/lv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scaleX="-1"
        android:dividerHeight="0px"/>
    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/row2"
        android:gravity="end">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/icon1"
            android:text="@string/cooking_competition"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cooking"
            android:layout_marginEnd="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/row3"
        android:layout_alignParentStart="true"
        android:gravity="end">

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/icon2"
            android:gravity="end"
            android:text="@string/family_meeting_event"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="150dp"
            android:src="@drawable/family" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/middle"
        android:gravity="end">

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/icon3"
            android:text="@string/festival_events"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/icon3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/festival"
            android:layout_marginEnd="200dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/row4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/middle"
        android:gravity="end">

        <TextView
            android:id="@+id/name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/icon4"
            android:text="@string/children_s_play_event"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/icon4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/play"
            android:layout_marginEnd="200dp"/>
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/row5"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_below="@+id/row4"
    android:gravity="end">

    <TextView
        android:id="@+id/name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/icon5"
        android:text="@string/sports_event"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:gravity="end"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/icon5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tennis_bat"
        android:layout_marginEnd="150dp"/>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/row6"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/row5"
        android:gravity="end">

        <TextView
            android:id="@+id/name6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/icon6"
            android:text="@string/wedding_event"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/icon6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/wedding"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>


</RelativeLayout>