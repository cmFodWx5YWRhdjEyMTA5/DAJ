<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    tools:context=".features.bookings.MyBookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackLight">

            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4">

                <TextView
                    android:id="@+id/today_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/today_events"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/todayDate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/orenge_circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calendarView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                app:mcv_allowClickDaysOutsideCurrentMonth="false"
                app:mcv_arrowColor="@color/white"
                app:mcv_calendarMode="month"
                app:mcv_dateTextAppearance="@style/CalenderViewCustom"
                app:mcv_headerTextAppearance="@style/CalenderViewCustom"
                app:mcv_selectionColor="@color/orange"
                app:mcv_showOtherDates="none"
                app:mcv_weekDayTextAppearance="@style/CalenderViewCustom"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <RelativeLayout style="@style/boxStyleNew">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_below="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/time" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/time"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="@color/gray" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/today_events"
                                android:textColor="@color/black"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold" />
                            <ImageView
                                android:id="@+id/delete"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/delete"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                       <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/today_events"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/delete" />-->

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/greenText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:paddingTop="10dp"
                                android:text="10.00am"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/wedding_reception"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/greenText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:paddingTop="10dp"
                                android:text="10.00am"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingTop="10dp"
                            android:text="@string/wedding_reception"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/upcoming_event"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                style="@style/boxStyleNew"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/orenge_circle" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_toEndOf="@+id/img1"
                        android:layout_toStartOf="@+id/time1"/>

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_toStartOf="@+id/delete1"
                        android:text="11.00am"
                        android:textColor="@color/blackTrans"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/delete1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/delete" />

                    <TextView
                        android:id="@+id/sub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/lorem_ipsum"
                        android:textColor="@color/blackTrans"
                        android:layout_below="@+id/title1"
                        android:layout_toEndOf="@+id/img1"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/green_circle" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_toEndOf="@+id/img2"
                        android:layout_toStartOf="@+id/time2"/>

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_toStartOf="@+id/delete2"
                        android:text="11.00am"
                        android:textColor="@color/blackTrans"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/delete2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/delete" />

                    <TextView
                        android:id="@+id/sub2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/lorem_ipsum"
                        android:textColor="@color/blackTrans"
                        android:layout_below="@+id/title2"
                        android:layout_toEndOf="@+id/img2"/>

                   </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/layout3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/layout2"
                      android:layout_marginTop="10dp">
                      <ImageView
                          android:id="@+id/img3"
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:layout_marginEnd="10dp"
                          android:background="@drawable/green_circle" />

                      <TextView
                          android:id="@+id/title3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/lorem_ipsum"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:maxLines="1"
                          android:layout_toEndOf="@+id/img3"
                          android:layout_toStartOf="@+id/time3"/>

                      <TextView
                          android:id="@+id/time3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="10dp"
                          android:layout_toStartOf="@+id/delete3"
                          android:text="11.00am"
                          android:textColor="@color/blackTrans"
                          android:textStyle="bold" />

                      <ImageView
                          android:id="@+id/delete3"
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:layout_alignParentEnd="true"
                          app:srcCompat="@drawable/delete" />

                      <TextView
                          android:id="@+id/sub3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:text="@string/lorem_ipsum"
                          android:textColor="@color/blackTrans"
                          android:layout_below="@+id/title3"
                          android:layout_toEndOf="@+id/img3"/>

                  </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>