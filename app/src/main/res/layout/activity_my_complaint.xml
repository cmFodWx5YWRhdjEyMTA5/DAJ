<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/complaintTitle"
            style="@style/heading1"
            android:layout_toStartOf="@+id/status"
            android:layout_alignParentStart="true"
            android:paddingEnd="5dp"
            android:maxLines="1"
            android:text="@string/bulb_is_not_working"/>
        <TextView
            android:id="@+id/complaintDate"
            style="@style/subHeading1"
            android:paddingEnd="5dp"
            android:layout_toStartOf="@+id/status"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:text="@string/bulb_is_not_working"
            android:layout_below="@+id/complaintTitle"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/assigned"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/curve_small_bg_orange"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="start"
        android:text="@string/lorem_ipsum_large"
       />
        <RelativeLayout
            android:id="@+id/photoLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:elevation="5dp"
            android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:src="@drawable/cctv"/>
            <LinearLayout
                android:id="@+id/secondRow"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cctv"/>
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="75dp"
                   android:layout_marginBottom="1dp"
                    android:src="@drawable/cctv"/>
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="75dp"
                    android:src="@drawable/cctv"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/bannerText"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blackTrans" >
                <ImageView
                    android:id="@+id/navIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    app:srcCompat="@drawable/projects"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:tint="@color/greenText"/>

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/white" />
            </LinearLayout>


        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
</LinearLayout>
</LinearLayout>