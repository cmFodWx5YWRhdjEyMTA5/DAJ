<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyComplaintActivity"
    android:background="@mipmap/bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/complaintTitle"
            style="@style/heading1"
            android:text="Bulb is not working"/>
        <TextView
            android:id="@+id/complaintDate"
            style="@style/subHeading1"
            android:text="Bulb is not working"
            android:layout_below="@+id/complaintTitle"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/assigned"
            android:textColor="@color/white"
            android:padding="5dp"
            android:background="@drawable/curve_small_bg_orange"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:src="@drawable/cctv"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="75dp"
                   android:layout_marginBottom="1dp"
                    android:src="@drawable/cctv"/>
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="75dp"
                    android:layout_below="@+id/image2"
                    android:src="@drawable/cctv"/>
            </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blackTrans" >
                <ImageView
                    android:id="@+id/navIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    app:srcCompat="@drawable/projects"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:tint="@color/greenText"/>

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="DAR Al JEWAR HALL - "
                    android:textStyle=""
                    android:textColor="@color/white" />
            </LinearLayout>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/lineGreen"
                style="@style/lineIndication"
                android:background="@color/greenText"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/headingSubmitted"
                style="@style/heading1"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/lineGreen"
                android:text="@string/submitted"/>
            <TextView
                style="@style/subHeading1"
                android:layout_below="@+id/headingSubmitted"
                android:layout_toEndOf="@+id/lineGreen"
                android:text="@string/lorem_ipsum"/>
            <TextView
                android:id="@+id/submittedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu , Nov 2017"
                android:textColor="@color/greenText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/date"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/submittedDate" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/lineOrange"
                style="@style/lineIndication"
                android:background="@color/orange"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/headingAssigned"
                style="@style/heading1"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/lineOrange"
                android:text="@string/assigned"/>
            <TextView
                style="@style/subHeading1"
                android:layout_below="@+id/headingAssigned"
                android:layout_toEndOf="@+id/lineOrange"
                android:text="@string/lorem_ipsum"/>
            <TextView
                android:id="@+id/assignedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu , Nov 2017"
                android:textColor="@color/greenText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/date"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/assignedDate"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/lineBlue"
                style="@style/lineIndication"
                android:background="@color/blue"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/headingInProgress"
                style="@style/heading1"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/lineBlue"
                android:text="@string/in_progress"/>
            <TextView
                style="@style/subHeading1"
                android:layout_below="@+id/headingInProgress"
                android:layout_toEndOf="@+id/lineBlue"
                android:text="@string/lorem_ipsum"/>
            <TextView
                android:id="@+id/inProgressDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu , Nov 2017"
                android:textColor="@color/greenText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/date"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/inProgressDate"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/lineRed"
                style="@style/lineIndication"
                android:background="@color/red"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/headingClosed"
                style="@style/heading1"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/lineRed"
                android:text="@string/assigned"/>
            <TextView
                style="@style/subHeading1"
                android:layout_below="@+id/headingClosed"
                android:layout_toEndOf="@+id/lineRed"
                android:text="@string/lorem_ipsum"/>
            <TextView
                android:id="@+id/closedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu , Nov 2017"
                android:textColor="@color/greenText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/date"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/closedDate"/>

        </RelativeLayout>

</LinearLayout>
</LinearLayout>