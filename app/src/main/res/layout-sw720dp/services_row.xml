<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/hall"
        style="@style/serviceLayout"
        android:background="@drawable/curve_small_bg_green">
        <LinearLayout
            android:id="@+id/rowBackBgDesign"
            android:orientation="horizontal"
            style="@style/backgroundBg"/>
        <RelativeLayout
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="360dp"
                android:layout_height="440dp"
                android:layout_marginStart="-8dp"
                android:src="@drawable/green_circle"/>
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="440dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/arcHall"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/arc_left"
                    android:tint="@color/white"
                    android:scaleType="fitEnd"
                    android:layout_marginEnd="-10dp"
                    />
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/hall"
                    />
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/arc_right"
                    android:tint="@color/white"
                    android:scaleType="fitStart"
                    android:visibility="invisible"
                    />


            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/a1"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/halls"/>

    </RelativeLayout>

</RelativeLayout>